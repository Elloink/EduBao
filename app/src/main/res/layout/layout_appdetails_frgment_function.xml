<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/actionsheet_bottom_normal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_appdetails_fragment_function_spreed"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

            <TextView
                android:layout_width="4dp"
                android:layout_height="18dp"
                android:background="@color/backgroud_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="应用介绍"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textview_appdetails_fragment_function_spread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableRight="@mipmap/arrow_down_details"
                android:gravity="right"
                android:text="展开"
                android:textColor="@color/backgroud_title" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_appdetails_fragment_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_appdetails_fragment_function_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/textview_appdetails_fragment_function_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:paddingLeft="10dp" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>